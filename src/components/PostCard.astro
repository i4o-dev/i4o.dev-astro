---
import { format } from 'date-fns'

type Props = {
	title: string
	publishedAt: Date
	description: string
	slug: string
}

const { title, publishedAt, description, slug } = Astro.props
---

<a
	class='group flex max-w-sm cursor-pointer flex-col gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:border-neutral-400'
	href={`/blog/${slug}`}
>
	<div
		class='flex w-full flex-col justify-between gap-2 md:flex-row md:items-center md:justify-between'
	>
		<div class='flex flex-grow items-center'>
			<p class='text-neutral-100 truncate'>{title}</p>
		</div>
		<span
			class='flex flex-row items-center gap-4 flex-shrink-0 text-xs italic leading-6'
		>
			{format(new Date(publishedAt), 'MMM dd')}
		</span>
	</div>
</a>

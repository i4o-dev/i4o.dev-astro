---
import { removeTrailingSlash } from '@/utils/helpers'
import presentation from '@/data/presentation'

const pathname = removeTrailingSlash(Astro.url.pathname)
---

<header class='z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between'>
	<a href='/' class='hover:text-neutral-100'>
		<img class='h-10' src={presentation.logo} alt='logo' />
	</a>

	<nav class='flex items-center' role='navigation'>
		<ul role='list' class='flex flex-row gap-2'>
			<li>
				<a
					href='/posts'
					class:list={{
						['hover:text-neutral-100']: true,
						['text-neutral-100']: pathname === '/posts',
					}}>Posts</a
				>
			</li>
			<li>/</li>
			<li>
				<a
					href='/projects'
					class:list={{
						['hover:text-neutral-100']: true,
						['text-neutral-100']: pathname === '/projects',
					}}>Projects</a
				>
			</li>
			<li>/</li>
			<li>
				<a
					href='/now'
					class:list={{
						['hover:text-neutral-100']: true,
						['text-neutral-100']: pathname === '/now',
					}}>Now</a
				>
			</li>
			<li>/</li>
			<li>
				<a
					href='/about'
					class:list={{
						['hover:text-neutral-100']: true,
						['text-neutral-100']: pathname === '/about',
					}}>About</a
				>
			</li>
		</ul>
	</nav>
</header>

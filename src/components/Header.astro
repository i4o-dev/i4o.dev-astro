	<!-- </a> -->
	<!---->
	<nav class='flex items-center' role='navigation'>
		<ul role='list' class='flex flex-row gap-2'>
			<li>
				<a
					href='/'
					class:list={{
						['hover:text-neutral-100']: true,
						['text-neutral-100']: pathname === '/',
					}}>Home</a
				>
			</li>
			<li>/</li>
			<li>
				<a
					href='/blog'
					class:list={{
						['hover:text-neutral-100']: true,
						['text-neutral-100']: pathname === '/blog',
					}}>Blog</a
				>
			</li>
			<li>/</li>
			<li>
				<a
					href='/projects'
					class:list={{
						['hover:text-neutral-100']: true,
						['text-neutral-100']: pathname === '/projects',
					}}>Projects</a
				>
			</li>
			<li>/</li>
			<li>
				<a
					href='/about'
					class:list={{
						['hover:text-neutral-100']: true,
						['text-neutral-100']: pathname === '/about',
					}}>About</a
				>
			</li>
		</ul>
	</nav>
    <SpotifyNowPlaying />
</header>

---
import Layout from '@/layouts/Layout.astro'
import SocialLinks from '@/components/SocialLinks.astro'
import Link from '@/components/shared/Link.astro'

import { Content } from '@/content/uses/uses.mdx'
---

<Layout title='Devices, Tools, and Tech Stack'>
	<main class='flex flex-col gap-20'>
		<article class='flex flex-col gap-8'>
			<h1 class='text-3xl text-neutral-100 font-serif'>
				Devices, Tools, and Tech Stack
			</h1>
			<section
				class='flex flex-col prose prose-invert prose-p:my-4 first:prose-p:mt-0'
			>
				<p>
					This is a complete list of the tools, apps, services and
					hardware I use on a regular basis. The list contains tools I
					use in my work as a web and mobile app developer but also
					tools I use offline.
				</p>
				<hr />
				<article class='mdx prose prose-invert max-w-none'>
					<Content />
				</article>
			</section>
		</article>
	</main>
</Layout>
